pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	x = 64
	y = 64
	c = 4 
end

function _update()
  if (btn(0) and x > 0) x -= 5
  if (btn(1) and x < 127) x += 5
  if (btn(2) and y > 0) y -= 5
  if (btn(3) and y < 127) y += 5
  if (btn(4) and c > 1) c -= 1
  if (btn(5) and c < 15) c += 1
end

function _draw()
  cls()
  circfill(x, y, 20, c)
end
